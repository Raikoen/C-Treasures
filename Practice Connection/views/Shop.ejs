<html>
	<head>
		<title>Shop</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="/Shop_Styles.css">
    <link rel="stylesheet" href="/Navigation_Styles.css">
	</head>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap');
    body
    { 
        font-family: 'Noto Sans', sans-serif;
        margin-top: 0; 
    }
  </style>
	
	<body>
    <!-- Top Nav Menu -->
		<div>
      <nav class="topMenu">
        <a class="active" href="#">Shop</a>
        <a href="about">About</a>
        <a href="events">Events</a>
        <a href="contact">Contact</a>
        <a href="cart"><img id="cart-icon" src="/Cart_Icon.png"></a>

        <!-- Search Bar -->
        <div class="search-bar">
            <form>
                <input type="text" placeholder="Search.." name="search">
                <button style="margin-top: 8px" type="submit"><img id="search-icon" src="/Search_Icon.png"/></button>
            </form>
          </div>  
      </nav>
    </div>

    <!-- Side Menu -->
    <div class="sideMenu">
      <img id="banner-image" src="/banner.jpg"/>
      <a class="dropDownBtn">Products <img id="menu-icon" src="/MobileMenuIcon.png"/></a>
    
      <div class="dropDownMenu">
        <a class="active" href="#">All Products</a>
        <a href="#">Bracelets</a>
        <a href="#">Earrings</a>
          <a href="#">Pendants</a>
          <a href="#">Loom Patterns</a>
      </div>
    </div>

    <script>
      /*  Used to hide or show side menu options */
      var dropDownMenu = document.getElementsByClassName("dropDownBtn");
      var i;

      for (i = 0; i < dropDownMenu.length; i++) 
      {
          dropDownMenu[i].addEventListener("click", function() 
          {
            this.classList.toggle("active");
            var menuOptions = this.nextElementSibling;
            if (menuOptions.style.display === "block") 
            {
              menuOptions.style.display = "none";
            }
            else 
            {
              menuOptions.style.display = "block";
            }
          });
      }
    </script>

  <!-- Main Content  -->
	<div class="pageContent">
 		<h1>All Products</h1>

    <!-- Sort By Filter -->
 		<nav style="padding-bottom: 20px" class="product-filter">

    		<div style="padding-left: 5px" class="sort-menu">
      			<label>Sort by:</label>
      			<select>
        			<option value="/">Relevant</option>
              <option value="">Best Price</option>
        			<option value="">Recently Added</option>
      			</select>
    		</div>
	   </nav>

  <!-- Product Gallery Display -->
	<section class="product-gallery">
	
		<%for (var result in productObject){%>
			
			<div class="product-card">
				<div class="product-image">
					<a href = "http://localhost:3000/api/productModel/item/:<%=productObject[result].productName%>"><img class="categories" src= <%=productObject[result].productPicture%>></a>
				</div>
				<div class = "product-info">
		  			<h5><%=productObject[result].productName%></h5>    
		  			<h6><%=productObject[result].productPrice%>.00</h6>
		  		</div>
			</div>
		<%}%>

	</section>		
	</div>
</body>
</html>