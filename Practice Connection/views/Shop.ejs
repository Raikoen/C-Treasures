<html>
	<head>
		<title>Shop</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		
		<style>
			@import url('https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap');
			@import url('https://fonts.googleapis.com/css2?family=Courgette&display=swap');
			
			.product-card
			{
				max-width: 200px;
			}

			body
			{
				margin: 0;
				font-family: 'Noto Sans', sans-serif;
			}
					
			#navbar
			{
				margin-left: 200px;
				position: fixed;
				display: flex;
				justify-content: flex-start;
				background-image: linear-gradient(#80dfff, #0086b3);
				width: 100%;
				max-height: 60px;
			}
			.nav-link
			{
				text-decoration: none;
				color: white;
				padding: 1rem;
				display: flex;
				margin-right: 1rem;
			}
			.nav-link:hover
			{
				background-color: cyan;
				color: blue;
			}

			#navbar .search-bar 
			{
  				float: right;
			}

			#navbar input[type=text] 
			{
  				padding: 6px;
  				margin-top: 8px;
  				font-size: 17px;
  				border: none;
			}

			#navbar .search-bar button 
			{
  				float: right;
  				padding: 6px 10px;
  				margin-top: 8px;
  				margin-right: 16px;
  				background: #ddd;
  				font-size: 17px;
  				border: none;
  				cursor: pointer;
			}

			#navbar .search-bar button:hover 
			{
  				background: #ccc;
			}

			#Search_Btn
			{
				max-height: 25px;
				max-width: 25px;
			}
			#banner
			{
				max-height: 300px;
				max-width: 200px;
				
			}
			#cartImg
			{
				margin-left: 10px;
				max-width: 40px;
				max-height: 40px;
				margin-top: 10px;
			}

			.sideMenu 
			{
  				padding: 0;
  				width: 200px;
  				background-color: #e6f9ff;
  				position: fixed;
  				
			}

			.sideMenu a 
			{
  				display: block;
  				color: black;
  				padding: 16px;
  				text-decoration: none;
			}
 
			.sideMenu a.active 
			{
  				background-color: cyan;
				color: blue;
			}

			.sideMenu a:hover:not(.active) 
			{
				background-color: #b3e6ff;
				text-decoration: underline;
  				color: blue;
			}

			#sectionHeading
			{
				font-family: 'Courgette', cursive;
				margin-top: 60px;
			}

			div.pageContent
			{
		
  				margin-left: 200px;
  				padding: 1px 16px;
  				height: 1000px;
			}

			@media screen and (max-width: 700px) 
			{
				#navbar
				{
					width: 100%;
					height: auto;
					position: relative;
				}
  				.sideMenu
  				{
    				width: 100%;
    				height: auto;
   					position: relative;
   					margin-top: 0;
 				}

  				div.pageContent {margin-left: 30px}

  				#banner
  				{
  					display: none;
  				}

  				#header
				{
					background-color: rgb(0, 230, 230);
					position: fixed;
					width: 100%;
				}

  				#navbar
				{
					position: relative;
					background-image: linear-gradient(#80dfff, #0086b3);
					width: 100%;
					max-height: 60px;
					margin-left: 0;
				}

				#navbar a
				{
					text-decoration: none;
					color: white;
					padding: 1rem;
					margin-right: 1rem;
				}

				#navbar a:hover
				{
					background-color: cyan;
					color: blue;
				}


			}

			.categories:hover
			{
				transform: translateY(8px);
			}

			* 
			{ box-sizing: border-box; }

/* Product images & dimensions */

.product-filter {
  display: flex;
}
.product-filter h1 {
  flex-grow: 1;
}
.sort {
  display: flex;
}
.collection-sort {
  display: flex;
  flex-direction: column;
}
.products {
  display: flex;
  flex-wrap: wrap;
}

.product-card {
  flex: 1 16%;

}

.product-image img {
	padding: 10px;
  max-width: 200px;
}
.product-info {
	margin-left: 10px;
  margin-top: auto;
}
@media (max-width: 920px) {
  .product-card {
    flex: 1 21%;
  }
 
}

@media (max-width: 600px) {
  .product-card {
    flex: 1 46%;
  }
}
@media (max-width: 480px) {
  .product-filter {
    flex-direction: column;
  }
}
@media (max-width: 480px) {
  .product-filter {
    flex-direction: column;
  }
  .sort {
    align-self: flex-start;
  }
}







